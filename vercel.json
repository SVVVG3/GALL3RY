{
  "version": 2,
  "buildCommand": "node vercel-build.js",
  "outputDirectory": "build",
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/api/$1" 
    },
    { 
      "src": "/(.*\\.(js|json|css|ico|png|jpg|svg))", 
      "dest": "/$1" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
