{
  "version": 2,
  "public": true,
  "framework": "create-react-app",
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "build",
  "routes": [
    { "src": "/api/v2/graphql", "dest": "/api/v2/graphql.js" },
    { "src": "/v2/graphql", "dest": "/api/v2/graphql.js" },
    { "src": "/api/zapper", "dest": "/api/zapper.js" },
    { "src": "/api/farcaster-user", "dest": "/api/farcaster-user.js" },
    { "src": "/api/nfts", "dest": "/api/nfts.js" },
    { "src": "/(.*\\.(js|json|css|ico|png|jpg|svg))", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
} 