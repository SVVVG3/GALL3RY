{
  "version": 2,
  "framework": "create-react-app",
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/api/index.js" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ],
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
